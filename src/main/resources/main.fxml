<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import monitoringsystemturbo.presenter.Legend?>
<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monitoringsystemturbo.presenter.MainPresenter">
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <HBox HBox.hgrow="ALWAYS">
                     <children>
                        <Button onAction="#onPrevDay" mnemonicParsing="false" text="&lt;" />
                        <DatePicker fx:id="datePicker"/>
                        <Button onAction="#onNextDay" mnemonicParsing="false" text="&gt;" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#onExport" text="Eksportuj" />
               </children>
            </HBox>
            <VBox alignment="TOP_RIGHT">
               <children>
                  <Legend fx:id="timelineLegend" alignment="TOP_RIGHT" spacing="5.0" />
               </children>
            </VBox>
            <Pane fx:id="computerTimelineContainer" />
            <ScrollPane fx:id="appTimelineContainer" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="appTimelineList" spacing="10.0" />
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </center>
   <left>
      <VBox prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="applicationList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <HBox>
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onAddApplication" text="Dodaj" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#onRemoveApplication" text="UsuÅ„">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </left>
</BorderPane>
